<h1> Question asked </h1>
<h2> title </h2>
<%= @question.title %>
<h2> description </h2>
<%= @question.description %>
<h2> Answers </h2>

<ol>
<%  @question.answers.each do |answer| %>
  <li><%= answer.response %>
    <%= pluralize(answer.votes.count, "vote") %>
    <%= button_to '+1', question_answer_upvote_path(@question,answer), method: :post %>
   <%= link_to "Edit", edit_question_answer_path(@question, answer) %>
 </li>
<% end %>
</ol>
<p>
<p>
